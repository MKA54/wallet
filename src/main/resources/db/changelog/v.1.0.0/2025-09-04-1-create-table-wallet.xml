<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet logicalFilePath="2025-09-04-1-create-table-wallet"
               id="2025-09-04-1-create-table-wallets" author="k.m.">
        <createTable tableName="wallet">
            <column defaultValueComputed="gen_random_uuid()" name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column defaultValue="0.00" name="amount" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
